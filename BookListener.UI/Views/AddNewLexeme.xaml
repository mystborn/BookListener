<UserControl x:Class="BookListener.UI.Views.AddNewLexeme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookListener.UI.Views"
             xmlns:vm="clr-namespace:BookListener.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:AddNewLexemeViewModel />
    </UserControl.DataContext>
    <Grid MouseDown="AddNewLexemeRequest">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Click to add new Lexeme" />
    </Grid>
</UserControl>
